

<div class="main-wrapper">
  <div class="container ">
    <div class="row">
      <div class="col-xs-12 col-sm-4">
        <h2 style="text-align: center;">All Pets </h2>    
      </div>
      <div class="col-xs-12 col-sm-4">
        <div id="new-petto">
          <%= link_to "List a New Petto", new_pet_path, class: 'btn-group-lg btn-success btn-lg' %>
        </div>
      </div>
      <div class="col-xs-12 col-sm-4">
        <%= form_tag pets_path, method: :get do %>
          <%= select_tag :query,
            options_for_select(Pet.pluck(:category).uniq),
            class: "form-control", id: "category-dropdown",
            placeholder: "search by pet category"
          %>
        <% end %>
      </div>
    </div>
    <br>

    <div class="row">
      <% @pets.each do |pet| %>
      <div class="col-xs-12 col-sm-4">
        <%=  link_to(pet) do %>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= cl_image_path pet.photo%>)">
            <div class="card-category"></div>
            <div class="card-description">
              <h2><%= pet.name %></h2>
              <p><%= pet.category %></p>
              <p><%= pet.breed %></p>
              <p><%= pet.gender %></p>
            </div>
            <%= cl_image_tag pet.user.photo, class: "card-user" %>
          </div>
        <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <div id="new-petto">
    <%= link_to "List a New Petto", new_pet_path, class: 'btn-group-lg btn-success btn-lg' %>
  </div>
</div>
