<!-- INDEX FOR ALL BOOKINGS -->

<div class="main-wrapper">
  <h3 style="text-align: center;">My Petto Bookings</h3>
  <div class="container">
    <div class="row">
      <% @bookings.each do |booking| %>
      <div class="col-xs-12 col-sm-4">
        <%=  link_to(pet) do %>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= cl_image_path booking.pet.photo%>)">
            <div class="card-category"></div>
            <div class="card-description">
              <h2><%= booking.pet.name %></h2>
              <p>Date from:<%= booking.start_date %></p>
              <p>Date until:<%= booking.end_date %></p>
            </div>
          </div>
        <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
