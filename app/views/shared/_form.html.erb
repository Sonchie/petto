<%= form_for(@pet) do |f| %>
<div class="form-group">
    <%= f.label :name %>
	<%= f.text_field :name %>	
</div>
<div class="form-group">
	<%= f.label :category %>
	<%= f.text_field :category %>
</div>
<div class="form-group">
	<%= f.label :breed %>
	<%= f.text_field :breed %>
</div>
<div class="form-group">
	<%= f.label :gender %>
	<%= f.text_field :gender %>
</div>
<div class="form-group">
	<%= f.label :price %>
	<%= f.text_field :price %>
</div>
<div class="form-group">
	<%= f.label :description %>
	<%= f.text_field :description %>
</div>
  <%= f.submit %>
<% end %>