<%= simple_form_for(@pet) do |f| %>
	<% if @pet.errors.any? %>
		<div class="errors-container">
			<ul class="list-inline">
				<% @pet.errors.full_messages.each do |message| %>
					<li><%= message %></li>
   				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="form-group">
	    <%= f.label :name %>
		<%= f.text_field :name %>	
	</div>
	<div class="form-group">
		<%= f.label :category %>
		<%= f.text_field :category %>
	</div>
	<div class="form-group">
		<%= f.label :breed %>
		<%= f.text_field :breed %>
	</div>
	<div class="form-group">
		<%= f.label :gender %>
		<%= f.text_field :gender %>
	</div>
	<div class="form-group">
		<%= f.label :price %>
		<%= f.text_field :price %>
	</div>
	<div class="form-group">
		<%= f.label :description %>
		<%= f.text_field :description %>
	</div>
	<div class="form-group">
		<%= f.input :photo %>
		<%= f.input :photo_cache, as: :hidden %>
	</div>
	  <%= f.submit %>
<% end %>